generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
  relationMode = "prisma"
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Member {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  houseId     String
  name        String
  phoneNumber String  @default("")
  lane        String
  active      Boolean @default(true)

  payments Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) // when the record was created
  paymentAt DateTime @default(now()) // when the payment was made
  month     DateTime @default(now()) // which month the payment is for
  amount    Float
  active    Boolean  @default(true)

  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId String

  @@index([memberId])
}

model Expense {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  expenseAt DateTime @default(now())
  amount    Float
  active    Boolean  @default(true)
}
