generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
  relationMode = "prisma"
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Member {
  id        String   @id @default(cuid())
  createdAt DateTime

  houseId String
  name    String
  lane    String
  active  Boolean

  Payment Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  createdAt DateTime
  amount    Float

  member   Member @relation(fields: [memberId], references: [id])
  memberId String

  @@index([memberId])
}
