generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
  relationMode = "prisma"
}

enum RecordType {
  Income
  Expense
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Member {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  active    Boolean   @default(true)

  name          String
  phoneNumber   String   @default("")
  houseId       String
  lane          String
  lastPaymentAt DateTime @default(now())

  payments Payment[]
}

model Payment {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) // when the payment was created
  deletedAt DateTime?
  active    Boolean   @default(true)

  month     DateTime @default(now()) // which month the payment is for
  amount    Float
  paymentAt DateTime @default(now()) // when the payment was made
  partial   Boolean  @default(false)

  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId String

  @@index([memberId])
}

model Record {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) // when the record was created
  deletedAt DateTime?
  active    Boolean   @default(true)

  name     String
  amount   Float
  type     RecordType @default(Income)
  month    DateTime   @default(now()) // which month the record is for
  recordAt DateTime   @default(now()) // when the record was made
}

enum BroadcastJobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

model BroadcastJob {
  id        String             @id @default(cuid())
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  status    BroadcastJobStatus @default(QUEUED)

  // Input parameters
  message        String
  membersFilter  String?
  monthsFilter   String? // JSON array of dates
  searchFilter   String?

  // Progress tracking
  totalRecipients   Int     @default(0)
  processedCount    Int     @default(0)
  successCount      Int     @default(0)
  failedCount       Int     @default(0)
  results           String? // JSON array of results
  error             String?

  // Processing metadata
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status, createdAt])
}
